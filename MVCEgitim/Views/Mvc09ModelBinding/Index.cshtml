@model MVCEgitim.Models.AnasayfaViewModel

@{
    ViewBag.Title = "Anasayfa";
}

<h2>Anasayfa</h2>

<div>
    <h3>Anasayfa View Model</h3>
    <hr />

    <h4>Kullanıcı Bilgileri</h4>
    Id : @Model.Kullanici.Id
    <h5>Adı : @Model.Kullanici.Ad</h5>
